{
  "name": "assistant-simple",
  "description": "A simple Node.js based web app which shows how to use the Watson Assistant API to recognize user intents.",
  "version": "0.1.1",
  "main": "server.js",
  "scripts": {
    "start": "nodemon --exec npx babel-node -- ./server.js",
    "test-integration": "casperjs test ./test/integration/test.*.js",
    "test-integration-runner": "NODE_ENV=test node casper-runner.js",
    "test": "npm run lint && npm run test-unit && npm run test-integration-runner",
    "test-unit": "jest test/unit --coverage",
    "lint": "eslint .",
    "autofix": "eslint --fix .",
    "codecov": "npm run test && (codecov || true)"
  },
  "babel": {
    "presets": [
      "latest"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/watson-developer-cloud/assistant-simple.git"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@cloudant/cloudant": "^2.3.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "body-parser": "^1.18.2",
    "browserify": "^16.2.2",
    "cloudant": "^1.10.0-NOTICE",
    "dotenv": "^5.0.1",
    "express": "^4.16.1",
    "mongodb": "^3.1.1",
    "mongoose": "^5.2.2",
    "requirejs": "^2.3.5",
    "watson-developer-cloud": "^3.5.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^6.0.4",
    "babel-preset-latest": "^6.24.1",
    "casperjs": "^1.1.4",
    "codecov": "^3.0.2",
    "eslint": "^2.8.0",
    "jest": "^22.4.3",
    "nodemon": "^1.18.1",
    "phantomjs-prebuilt": "^2.1.15",
    "supertest": "^3.1.0"
  },
  "engines": {
    "node": ">= 6.9.x",
    "npm": "> 3.10.x"
  }
}
